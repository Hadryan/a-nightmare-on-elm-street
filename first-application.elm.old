import Html exposing (Html, button, div, text, program)
import Html.Events exposing (onClick)

main : Program Never Model Msg
main = program { init = init, model = model, view = view, update = update, subscriptions = subscriptions }

init : (Model, Cmd Msg)
init = (model, Cmd.none)

subscriptions : Model -> Sub Msg
subscriptions model =
  Sub.none

-- MODEL

type alias Model = Int
model : Model
model = 0

-- update

type Msg = Increment | Decrement | StreamHifiPls

update : Msg -> Model -> Model
update msg model =
  case msg of
    Increment ->
      model + 1
    Decrement ->
      model - 1
    StreamHifiPls ->
      model * model

-- VIEW

view : Model -> Html Msg
view model = div []
  [
    button [ onClick StreamHifiPls ] [ text "-" ],
    div [] [text (toString model)],
    button [ onClick Increment ] [ text "+" ]
  ]

